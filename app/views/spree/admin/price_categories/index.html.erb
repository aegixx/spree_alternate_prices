<%= render 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= Spree.t(:listing_price_categories) %>
<% end %>

<% content_for :page_actions do %>
  <ul class="actions inline-menu">
    <li>
      <%= button_link_to Spree.t(:new_category), new_object_url, { :icon => 'plus', :id => 'admin_new_category' } %>
    </li>
  </ul>
<% end %>

<table class="index" id='listing_categories' data-hook>
  <colgroup>
    <col style="width: 80%" />
    <col style="width: 20%" />
  </colgroup>
  <thead>
    <tr data-hook="category_header">
      <th><%= Spree.t(:category_name) %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @collection.each do |category| %>
      <tr id="<%= spree_dom_id category %>" data-hook="category_row" class="<%= cycle('odd', 'even')%>">
        <td><%= category.name %></td>
        <td class="actions">
          <%= link_to_edit category, :no_text => true %>
          <%= link_to_delete category, :no_text => true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
